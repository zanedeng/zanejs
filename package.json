{
  "name": "zanejs_new",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build",
    "changeset": "pnpm exec changeset",
    "check": "pnpm run check:circular && pnpm run check:dep && pnpm run check:type && pnpm check:cspell",
    "check:circular": "node ./scripts/check-circular.mjs",
    "check:cspell": "cspell lint **/*.ts **/README.md .changeset/*.md --no-progress",
    "check:dep": "node ./scripts/check-dep.mjs",
    "check:type": "turbo run typecheck",
    "clean": "node ./scripts/clean.mjs",
    "commit": "czg",
    "dev": "turbo-run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@zanejs/commitlint-config": "workspace:*",
    "@zanejs/eslint-config": "workspace:*",
    "@zanejs/prettier-config": "workspace:*",
    "@zanejs/stylelint-config": "workspace:*",
    "@zanejs/tsconfig": "workspace:*",
    "@zanejs/vite-config": "workspace:*",
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "turbo": "catalog:",
    "cross-env": "catalog:",
    "cspell": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "prettier": "catalog:"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=10.12.4"
  }
}
