{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es2017", "es2021"],
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
